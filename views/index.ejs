
<!-- List of reviews below -->
<div class="container review">
    <h3>Check out our latest book reviews</h3>
    <% reviews.forEach((review, index) => { %>
       
        <li class="review-list"><a href="/book/review/<%=review.id%>"><%= review.title %></a> by <%= review.author %>.</li>
        
    <% }); %> 
</div>

