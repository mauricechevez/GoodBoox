        <ul>
          <% if (!currentUser) { %> 
            <li><a href="/auth/signup">Signup</a></li>
            <li><a href="/auth/login">Login</a></li>
            
          <%} else { %> 
            <li><a href="/auth/logout">Log Out</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/book/new">Create a Book Review</a></li>
            <li><a href=/book/edit>Edit a Book Review</a></li>
          <% } %> 
        </ul>
      </nav>
    </header>
    <div class="container">
      <h1 class="goodboox-logo"><a href="/" class="goodboox-logo"><span style="font-weight: 200;">good</span>boox</a></h1>
      <div class=" goodboox-subtitle">Let's Read More!</div>
    </div>
    
    <%- body %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
