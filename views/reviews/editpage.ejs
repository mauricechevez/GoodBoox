
<!-- List of reviews below -->

<div class="container review">
    <h2>Edit or delete a review</h2>
    
    <% reviews.forEach((review, index) => { %>
        <li style="margin-bottom: 15px;"><span style="font-weight: 700;"><%= review.title %></span>.
            <br \>
            <div class="btn btn-primary"> <a href="/book/edit/<%=review.id%>" style="color: rgb(255, 255, 255); text-decoration: none;">Edit this review </a></div> 
        <form method="POST" action="/book/edit/<%=review.id%>/?_method=DELETE" >
            <input type="submit" value="Delete this review" class="btn btn-danger">
        </form>
        </li>  
    <% }); %> 
</div>

