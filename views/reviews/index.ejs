
<div class="container">
    <h2><%= bookFound.title %> </h2>
    <!--Author here-->
    <p>by <span style="font-weight: 700;"><%= bookFound.author %> </span></p>
    <!-- Rating here -->
    <p>Rating: <span style="font-weight: 700;"><%= bookFound.book_rating %> / 5 </span></p>
    <!--Price here-->
    <p>Price: <span style="font-weight: 700;">$<%= bookFound.book_price %></span> USD </p>
    <!-- Image here-->
    <img src="<%= bookFound.img_url %>" alt="<%=bookFound.title%>">
    <!-- content here-->
    <div class="bookreview-content">
        <%= bookFound.content %> 
    </div>
    <p>Reviewed by: <span style="font-weight: 700;"><%= bookFound.user.name %> </span></p>

</div>
<div class='container comment-form' style="margin-bottom: 25px;">
    <p class="h5">Comments Below</p> 

    <form action="/book/review/<%= bookFound.id %> /" method="POST">
    <label for="name">Your Name</label>
    <input type="text" id="name" name="name" required placeholder="Enter your name">
    <br \>
    <br \>
    <label for="content"></label>
    <textarea name="content" id="content" cols="70" rows="5" placeholder="Add a public comment" required></textarea>
    <br \>
    <br \>
    <input type="submit" value="submit">
    </form>
</div>
<div class="container comment-section">
    
  <% bookFound.comments.forEach(cmt => { %>
    <li><p class="comment-name"><%= cmt.name %> </p></li>
     <li><p><%= cmt.content %> </p></li>
  <% }) %>
</div>